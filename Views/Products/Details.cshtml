@model Pharm.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="product-details-container">
    <!-- Product Image -->
    <div class="product-details-image">
        <img src="~/@Model.ImageUrl" alt="@Model.Name" />
    </div>

    <!-- Product Details -->
    <div class="product-details-info">
        <h2>@Model.Name</h2>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Price:</strong> $@Model.Price</p>
        <p><strong>Stock:</strong> @Model.Stock</p>

        <!-- Quantity and Add to Cart -->
        <form method="post" asp-action="AddToCart" asp-controller="Carts">
            <div class="quantity-container">
                <label for="quantity"><strong>Quantity:</strong></label>
                <input type="number" id="quantity" name="quantity" value="1" min="1" max="@Model.Stock" />
                <input type="hidden" name="productId" value="@Model.Id" />
                <button type="submit" class="add-to-cart-btn">Add to Cart</button>
            </div>
        </form>

        <!-- Back to Products Link -->
        <a asp-action="Index" asp-controller="Products" class="back-to-products">Back to Products</a>
    </div>
</div>
