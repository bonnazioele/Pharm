@model IEnumerable<Pharm.Models.Product>

<div class="container my-5">
    <h2 class="text-center mb-4">Explore Our Products</h2>
    <div class="row justify-content-center">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm rounded border-0">
                    <div class="text-center p-3">
                        <img src="@product.ImageUrl" alt="@product.Name" class="card-img-top product-image" style="max-height: 150px; object-fit: contain;">
                    </div>
                    <div class="card-body text-center">
                        <h5 class="fw-bold">@product.Name</h5>
                        <p class="text-muted">@product.Description</p>
                        <p class="fw-bold text-primary">Price: $@product.Price</p>
                        <a href="@Url.Action("Details", "Products", new { id = product.Id })" class="btn btn-success rounded-pill">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
