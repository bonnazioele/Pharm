@model Pharm.Models.EditProfileViewModel

<div class="container mt-5">
    <h2>Edit Profile</h2>
    <form asp-action="EditProfile" method="post">
        <div class="form-group">
            <label for="UserName">Username</label>
            <input type="text" id="UserName" value="@Model.UserName" class="form-control" readonly />
        </div>
        <div class="form-group mt-3">
            <label for="Email">Email</label>
            <input type="email" id="Email" name="Email" value="@Model.Email" class="form-control" required />
        </div>
        <div class="form-group mt-3">
            <label for="Address">Address</label>
            <input type="text" id="Address" name="Address" value="@Model.Address" class="form-control" />
        </div>
        <div class="form-group mt-3">
            <label for="PhoneNumber">Phone Number</label>
            <input type="text" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary mt-4">Save Changes</button>
    </form>
</div>
