<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pharmasuit</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <h1>Pharmasuit</h1>
       
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand text-white" href="/">Pharmasuit</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!-- Navigation Links -->
                    <li class="nav-item ">
                        <a class="nav-link text-white" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" " href="/Products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" " href="/Carts">Cart</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Account Dropdown for Authenticated Users -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Account
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="accountDropdown">
                                <li><a class="dropdown-item" href="/Accounts/EditProfile">Edit Profile</a></li>
                                <li><a class="dropdown-item" href="/Orders/MyOrders">Order Status</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-action="Logout" asp-controller="Accounts" method="post" style="display: inline;">
                                        <button class="dropdown-item btn btn-link" type="submit">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <!-- Login and Register Links for Non-Authenticated Users -->
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Accounts/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Accounts/Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center mt-4">
        &copy; 2024 - Pharmasuit. All Rights Reserved.
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
