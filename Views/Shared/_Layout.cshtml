<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pharmasuit</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <h1>Pharmasuit</h1>
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Products" asp-action="Index">Products</a></li>
                <li><a asp-controller="Carts" asp-action="Index">Cart</a></li>
                <li><a asp-controller="Carts" asp-action="Checkout">Checkout</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a asp-controller="Accounts" asp-action="Logout">Logout</a></li>
                }
                else
                {
                    <li><a asp-controller="Accounts" asp-action="Login">Login</a></li>
                    <li><a asp-controller="Accounts" asp-action="Register">Register</a></li>
                }
            </ul>
        </nav>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        &copy; 2024 - Pharmasuit. All Rights Reserved.
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
